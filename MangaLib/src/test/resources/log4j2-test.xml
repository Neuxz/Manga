<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="de.herrlock.manga.ui" status="info">
	<Properties>
		<Property name="patternLayout">%d{HH:mm:ss.SSS} [%t] %-5level %logger{1.}.%M - %m%n</Property>
	</Properties>
	<Appenders>
		<JTextAreaAppender />
		<Console name="ConsoleTrace" target="SYSTEM_OUT">
			<PatternLayout pattern="${patternLayout}" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="de.herrlock" level="all">
			<AppenderRef ref="JTextArea" />
			<AppenderRef ref="ConsoleTrace" />
		</Logger>
		<Root level="all" />
	</Loggers>

</Configuration>