<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="de.herrlock.manga.ui">
	<Appenders>
		<JTextAreaAppender />
		<Console name="ConsoleTrace" target="SYSTEM_OUT">
			<PatternLayout pattern="%m%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="all">
			<AppenderRef ref="JTextArea" />
			<AppenderRef ref="FileTrace" />
		</Root>
	</Loggers>

</Configuration>