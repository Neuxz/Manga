<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="de.herrlock.manga.ui.log" status="info">
	<Properties>
		<Property name="patternLayout">%d{HH:mm:ss.SSS} [%t] %-5level %logger{1.}.%M - %m%n</Property>
	</Properties>
	<Appenders>
		<JTextAreaAppender />
		<Console name="ConsoleTrace" target="SYSTEM_OUT">
			<PatternLayout pattern="${patternLayout}" />
		</Console>
		<Console name="ApacheLogger" target="SYSTEM_OUT">
			<PatternLayout pattern="${patternLayout}" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="org.apache.http" level="error" additivity="false">
			<AppenderRef ref="ApacheLogger" />
		</Logger>
		<Root level="all">
			<AppenderRef ref="ConsoleTrace" />
		</Root>
	</Loggers>

</Configuration>