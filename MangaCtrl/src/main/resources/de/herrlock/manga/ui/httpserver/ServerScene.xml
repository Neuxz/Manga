<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
	fx:controller="de.herrlock.manga.ui.httpserver.ServerController">
	<padding>
		<Insets top="8" right="24" bottom="8" left="24" />
	</padding>
	<center>
		<VBox spacing="8">
			<HBox spacing="8">
				<padding>
					<Insets top="8" right="8" left="8" />
				</padding>
				<Button fx:id="btnStartServer" text="%server.start" onAction="#startServer"
					defaultButton="true" />
				<Button fx:id="btnStopServer" text="%server.stop" onAction="#stopServer" />
			</HBox>
		</VBox>
	</center>
	<bottom>
		<Text fx:id="bottomText" text="" />
	</bottom>
</BorderPane>
